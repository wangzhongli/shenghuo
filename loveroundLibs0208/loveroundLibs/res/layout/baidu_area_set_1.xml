<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/bas_image"
        android:layout_width="@dimen/bottom_bar_height"
        android:layout_height="@dimen/bottom_bar_height"
        android:layout_gravity="center_vertical"
        android:src="@drawable/defualt_img" />

    <!--
         <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@drawable/map_top_devider" />
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp" >

        <TextView
            android:id="@+id/bas_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="fdsfsdfs"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#434343" />

        <TextView
            android:id="@+id/bas_is_set_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="aaaaaaaaaa"
            android:textColor="#434343"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>