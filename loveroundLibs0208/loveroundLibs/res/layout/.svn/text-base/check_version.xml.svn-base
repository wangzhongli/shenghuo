<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_1_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginLeft="10dp"
        android:gravity="left"
        android:text="@string/btn_upgrade"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/text_white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/undline_height"
        android:layout_marginLeft="@dimen/loging_margin_default_larger"
        android:layout_marginRight="@dimen/loging_margin_default_larger"
        android:background="#D8ffffff"
        android:textColor="@color/text_white" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/loging_margin"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:textColor="#f1f1f1" />

    <ProgressBar
        android:id="@+id/pbDownload"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_margin="3dp"
        android:minHeight="8dp"
        android:progressDrawable="@drawable/sbcontrol_layor_2"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginBottom="2dp" 
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/dialog_btn_selector"
                android:text="@string/btn_cancel"
                android:textColor="#000099"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btnUpgrade"
                android:layout_width="100dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/dialog_btn_selector"
                android:text="@string/btn_ok"
                android:textColor="#000099"
                android:textSize="17sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>