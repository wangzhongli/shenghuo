<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/common_title_bg_colors"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/line_follow_time_setting"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@drawable/lin_common_bg_selector"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/top_back_btn1" />
        </LinearLayout>
        
         <TextView
             android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/follow_time_setting"
            android:layout_weight="1"
            android:textColor="@color/text_white"
            android:textSize="18sp" />
         
         <TextView
            android:id="@+id/btn_set_sheng_act_save"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="right"
            android:background="@drawable/lin_common_bg_selector"
            android:text="@string/_save"
            android:textSize="16sp"
            android:textColor="@color/text_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interval"
            android:textSize="23sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
             android:textColor="#8F9090"
            android:text="@string/interval_detail" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#2FA0F6"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@drawable/whit_line2" />

        <com.cwtcn.kt.ui.TimeSeekBar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_dialog_updata_min"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="@string/minute_3"
                android:textColor="@color/text_white"
                android:textSize="@dimen/follow_dialog_time_text_size"
                android:visibility="invisible" />

            <SeekBar
                android:id="@+id/seekBar_update_time"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:maxHeight="10dp"
                android:minHeight="10dp"
                android:max="120"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:progressDrawable="@drawable/sbcontrol_layor"
                android:thumb="@drawable/sb_thumb_1" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_rectangle_81_blue"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="@string/minute_3"
                android:textColor="@color/text_white"
                android:textSize="@dimen/main_location_text_size" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:background="@drawable/rounded_rectangle_81_blue"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="@string/minute_5"
                android:textColor="@color/text_white"
                android:textSize="@dimen/main_location_text_size" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:background="@drawable/rounded_rectangle_81_blue"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="@string/minute_10"
                android:textColor="@color/text_white"
                android:textSize="@dimen/main_location_text_size" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:background="@drawable/rounded_rectangle_81_blue"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="@string/minute_20"
                android:textColor="@color/text_white"
                android:textSize="@dimen/main_location_text_size" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:background="@drawable/rounded_rectangle_81_blue"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="@string/minute_30"
                android:textColor="@color/text_white"
                android:textSize="@dimen/main_location_text_size" />
        </com.cwtcn.kt.ui.TimeSeekBar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/warning_small" />

            <TextView
                android:id="@+id/tv_dialog_show_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/follow_time_text"
                android:textColor="#8F9090" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/location_mode"
                        android:textSize="23sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="5dp"
                    android:background="#2FA0F6" />

                <RelativeLayout
                    android:id="@+id/line_updata_location_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp" >

                    <ImageView
                        android:id="@+id/radiobtn_set_hit_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/radiobtn_set_hit_1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/accurate_model"
                            android:textColor="#000"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/accurate_model_detail"
                            android:textColor="#8F9090" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/line_updata_location_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" 
                    >

                    <ImageView
                        android:id="@+id/radiobtn_set_hit_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/radiobtn_set_hit_2"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_updata_location_text_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/normal_model"
                            android:textColor="#000"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/normal_model_detail"
                            android:textColor="#8F9090" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/line_updata_location_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" >

                    <ImageView
                        android:id="@+id/radiobtn_set_hit_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/radiobtn_set_hit_3"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_updata_location_text_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/power_saving_mode"
                            android:textColor="#000"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/power_saving_mode_detail"
                            android:textColor="#8F9090" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sleep_period"
                        android:textSize="23sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="#8F9090"
                        android:text="@string/sleep_period_detail" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="5dp"
                    android:background="#2FA0F6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp" >

                        <!--
                             <EditText
                            android:id="@+id/et_set_hit_hour"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:gravity="center"
                            android:hint="@string/text_hour"
                            android:inputType="time"
                            android:maxLength="2"
                            android:textColor="@color/edittext_color" />
                        -->

                        <Button
                            android:id="@+id/dul_time_start"
                            style="@style/setting_quite_time_style" 
                            android:textColor="@color/back"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.2"
                            android:layout_margin="10dp"
                            android:background="@drawable/time_jian_ge" />

                        <Button
                            android:id="@+id/dul_time_end"
                            style="@style/setting_quite_time_style" 
                             android:textColor="@color/back"/>
                        <!--
                             <EditText
                            android:id="@+id/et_set_hit_min"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="#fff"
                            android:gravity="center"
                            android:hint="@string/text_minute"
                            android:inputType="time"
                            android:maxLength="2"
                            android:textColor="@color/edittext_color" />
                        -->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp" >

                        <com.cwtcn.kt.ui.SlipButton
                            android:id="@+id/dul_sleep_enble"
                            android:layout_width="50dp"
                            android:layout_height="20dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btn_dialog_sure"
            android:layout_width="195dp"
            android:layout_height="43dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_common_bg_selector_green"
            android:text="@string/_save"
            android:textColor="@android:color/white"
            android:visibility="gone" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_dialog_updata_location_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="5dp"
        android:textColor="@color/edittext_color"
        android:visibility="gone" />

</LinearLayout>