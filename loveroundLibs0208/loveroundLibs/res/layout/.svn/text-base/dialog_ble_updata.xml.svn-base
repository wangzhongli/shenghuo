<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_1_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/loging_margin_default_larger"
            android:text="@string/confirmation_ble_updata"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/undline_height"
            android:layout_marginLeft="@dimen/loging_margin_default_larger"
            android:layout_marginRight="@dimen/loging_margin_default_larger"
            android:background="@color/textview_bg" />

        <ListView
            android:id="@+id/dbu_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </ListView>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/undline_height"
            android:layout_marginLeft="@dimen/loging_margin_default_larger"
            android:layout_marginRight="@dimen/loging_margin_default_larger"
            android:background="@color/textview_bg" />

        <Button
            android:id="@+id/dbu_can"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/confirmation_ble_cancle"
            android:textSize="18sp"
            android:paddingLeft="@dimen/loging_image_top"
            android:paddingRight="@dimen/loging_image_top"
            android:background="@drawable/dialog_btn_selector" />
    </LinearLayout>

</LinearLayout>