    <Button
        android:id="@+id/sta_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="@drawable/set_quite_time_btn_bg"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/back" 
        android:text="00:00"/>

    <Button
        android:id="@+id/btn_set_time_get_os_time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_red_bg_press_selector"
        android:text="@string/text_get_system_time"
        android:textColor="#fff" />

