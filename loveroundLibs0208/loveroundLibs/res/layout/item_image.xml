<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ii_line"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="@drawable/map_list_item_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ii_item"
        android:layout_width="95dp"
        android:layout_height="95dp" >

        <ImageView
            android:id="@+id/ii_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/image_content_description" >
        </ImageView>

        <com.cwtcn.kt.utils.BatteryView
            android:id="@+id/bv_show_current_battery"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_alignParentBottom="true" >
        </com.cwtcn.kt.utils.BatteryView>
        
        <TextView
            android:id="@+id/tv_show_msg_comming"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:background="@drawable/chat_from_msg_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="#fff" />
        
    </RelativeLayout>

</LinearLayout>