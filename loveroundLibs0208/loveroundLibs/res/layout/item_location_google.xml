<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_title_bg" >

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp" >

            <ImageView
                android:id="@+id/is_im_location"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/text_click"
                android:src="@drawable/style1_012" />

            <!--
                 <TextView
                android:id="@+id/is_im_power"
                android:layout_width="80dp"
                android:layout_height="20sp"
                android:layout_gravity="bottom"
                android:background="@drawable/panel_bg"
                android:gravity="center"
                android:text="@string/power_show" />
            -->
        </FrameLayout>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/textview_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tab_tv_bg"
            android:gravity="center_vertical|left"
            android:orientation="vertical"
            android:paddingLeft="@dimen/loging_margin_default" >

            <TextView
                android:id="@+id/is_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/is_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/isg_MapRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>