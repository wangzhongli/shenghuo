<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/orderDetailCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dip" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_orderSn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/mall_card_title" />

            <TextView
                android:id="@+id/textView_orderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/mall_card_subtitle"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_orderState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/mall_card_order_state" />
    </LinearLayout>

    <include layout="@layout/mall_sep_h" />

    <LinearLayout
        android:id="@+id/productContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <include layout="@layout/mall_sep_h" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dip" >

        <TextView
            android:id="@+id/textView_appointmentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/mall_card_subtitle" />

        <TextView
            android:id="@+id/textView_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dip"
            android:paddingBottom="4dip"
            style="@style/mall_card_subtitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/textView_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/mall_card_product_price" />
            <TextView
                android:id="@+id/textView_shippingCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                style="@style/mall_card_subtitle"
                 />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>