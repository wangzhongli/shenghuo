<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="button_color_font">
        <item name="android:padding">@dimen/activity_margin</item>
        <item name="android:textSize">@dimen/title_textSize</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="wuye_cm_button">
        <item name="android:textSize">@dimen/title_textSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/wuye_cm_sl_button</item>
    </style>

    <style name="pic_dialog_style" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/pic_dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/pic_dialog_exit</item>
    </style>
    <!-- 进度对话框样式 -->
    <style name="custom_progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>