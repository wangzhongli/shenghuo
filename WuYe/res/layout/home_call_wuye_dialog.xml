<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/dialog_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin" >
    <RelativeLayout
        android:id="@+id/call_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:background="@drawable/btn_pic_selector_background"
        android:gravity="center"
        android:padding="@dimen/activity_margin" >
        <TextView
            android:id="@+id/wuye_phone"
            style="@style/textview_color_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/app_name"
            android:background="@drawable/call_background" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/call_mobile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_marginTop="@dimen/activity_margin"
        android:background="@drawable/btn_pic_selector_background"
        android:gravity="center"
        android:padding="@dimen/activity_margin" >

        <TextView
            android:id="@+id/wuye_mobile"
            style="@style/textview_color_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/app_name"
            android:background="@drawable/call_background" />
    </RelativeLayout>
    <Button
        android:id="@id/cancel_btn"
        style="@style/button_color_font"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_marginTop="@dimen/activity_margin"
        android:background="@drawable/btn_cancle_background"
        android:padding="@dimen/activity_margin"
        android:text="@string/text_cancel" />

</LinearLayout>