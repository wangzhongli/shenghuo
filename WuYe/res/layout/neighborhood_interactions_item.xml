<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_background"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin" >

<!--     <ImageView
        android:id="@id/item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/arrow_right"
        android:contentDescription="@string/app_name" /> -->

    <TextView
        android:id="@+id/bbs_topic_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_alignParentRight="true"
        android:background="@drawable/bbs_topic_num_icon"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/body_textSize" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/bbs_topic_num"
        android:layout_marginRight="5dip"
        android:orientation="vertical" >

        <TextView
            android:id="@id/item_title"
            style="@style/textview_color_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@id/item_content"
            style="@style/body_color_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true" />
    </LinearLayout>

</RelativeLayout>