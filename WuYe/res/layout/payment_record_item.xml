<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_margin"
    android:background="@drawable/listview_item_background" >
     <ImageView
        android:id="@+id/icon"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:background="@drawable/water_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_toRightOf="@id/icon"
        android:orientation="vertical" >
        <TextView 
            android:id="@+id/feeType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textview_color_font"
            android:text="物业费"
            />
         <TextView 
            android:id="@+id/feeTiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/notes_color_font"
            android:text="时间"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >
        <TextView 
            android:id="@+id/feeAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textview_color_font"
            android:text="金额"
            android:textStyle="bold"
            />
         <TextView 
            android:id="@+id/feeState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/notes_color_font"
            android:text="状态"
            />
    </LinearLayout>
    

</RelativeLayout>
