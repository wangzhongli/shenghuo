<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:padding="@dimen/activity_margin" >

                <TextView
                    style="@style/textview_color_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:text="预约取件时间" />

                <TextView
                    android:id="@+id/appointmentTime"
                    style="@style/edittext_color_font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/activity_margin_top"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:hint="请选择时间" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="horizontal"
                android:padding="@dimen/activity_margin" >

                <TextView
                    style="@style/textview_color_font"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="预约人" />

                <EditText
                    android:id="@+id/membername"
                    style="@style/edittext_color_font"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_margin_top"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:hint="请输入预约人姓名" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="horizontal"
                android:padding="@dimen/activity_margin" >

                <TextView
                    style="@style/textview_color_font"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="预约人电话" />

                <EditText
                    android:id="@+id/mobilephone"
                    style="@style/edittext_color_font"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_margin_top"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:hint="请输入您的联系方式"
                    android:inputType="phone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/activity_margin"
                android:background="@color/line_background" />

            <TextView
                style="@style/textview_color_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:padding="@dimen/activity_margin"
                android:text="取件区域:" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="vertical"
                android:padding="@dimen/activity_margin" >

                <Spinner
                    android:id="@id/provice_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:background="@drawable/spinner_nob_background"
                    android:popupBackground="@color/background" />

                <Spinner
                    android:id="@id/city_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:background="@drawable/spinner_nob_background"
                    android:popupBackground="@color/background" />

                <Spinner
                    android:id="@id/area_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:background="@drawable/spinner_nob_background"
                    android:popupBackground="@color/background" />

                <Spinner
                    android:id="@+id/plateRegin_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:background="@drawable/spinner_hasb_background"
                    android:popupBackground="@color/background" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_background" />

            <TextView
                android:id="@+id/plate_range"
                style="@style/textview_color_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:padding="@dimen/activity_margin"
                android:text="范围包括:"
                android:textColor="@color/notes_textColor" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/activity_margin"
                android:background="@color/line_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="horizontal"
                android:padding="@dimen/activity_margin" >

                <TextView
                    style="@style/textview_color_font"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="详细地址" />

                <EditText
                    android:id="@+id/address"
                    style="@style/edittext_color_font"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_margin_top"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:gravity="right"
                    android:hint="请输入您的详细地址" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_background" />

            <EditText
                android:id="@+id/description"
                style="@style/edittext_color_font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_marginTop="@dimen/activity_margin"
                android:background="@drawable/edittext_background"
                android:gravity="left|top"
                android:hint="请输入您的备注信息"
                android:lines="3"
                android:padding="@dimen/activity_margin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin"
                android:layout_marginRight="@dimen/activity_margin"
                android:layout_marginTop="@dimen/activity_margin"
                android:orientation="vertical" >

                <Button
                    android:id="@id/ok_btn"
                    style="@style/button_color_font"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_48"
                    android:background="@drawable/btn_background_select"
                    android:text="提交" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>